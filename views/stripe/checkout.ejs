<% layout('layouts/boilerplate')%>
<div class="container">
    <h1 class="display-4 text-center">Oodabir pretplate</h1>
    <div class="progress" style="height: 3px">
        <div
            class="progress-bar bg-dark"
            role="progressbar"
            style="width: 66%"
            aria-valuenow="66"
            aria-valuemin="0"
            aria-valuemax="100"
        ></div>
    </div>
</div>
<div
    class="container vh-80 d-flex flex-column justify-content-center align-items-center"
>
    <div class="container pricing py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card shadow free">
                    <div class="card-body">
                        <h5 class="card-title text-center">Starter</h5>
                        <p class="card-text text-center">
                            Osnovne funckije za praćenje jednostavnih procesa
                        </p>
                        <p class="card-text text-center cijena">
                            14,99 kn / mj.
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <img
                                src="icons/backup_black.svg"
                                alt="backup icon"
                            />
                            1 GB prostora u cloud-u je dovljno za spremanje
                            <b>~3.230</b> PDF file-ova<span class="text-danger"
                                >*</span
                            >
                        </li>
                        <li class="list-group-item">
                            <img
                                src="icons/category_black.svg"
                                alt="category icon"
                            />
                            5 promjenjivih kategorija
                        </li>
                        <li class="list-group-item">
                            <img src="icons/close_black.svg" alt="x icon" />Bez
                            promjena sučelja
                        </li>
                        <li class="list-group-item">
                            <img src="icons/close_black.svg" alt="x icon" />Bez
                            filtera
                        </li>
                    </ul>
                    <div class="card-body">
                        <button class="btn btn-dark" id="starter">
                            Odaberi
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card shadow premium">
                    <div class="card-body">
                        <h5 class="card-title text-center">Premium</h5>
                        <p class="card-text text-center">
                            Dodatne funkcije za srednje kompleksne procese
                        </p>
                        <p class="card-text text-center cijena">
                            29,99 kn / mj.
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <img
                                src="icons/backup_black.svg"
                                alt="backup icon"
                            />
                            5 GB prostora u cloud-u je dovljno za spremanje
                            <b>~16.150</b> PDF file-ova<span class="text-danger"
                                >*</span
                            >
                        </li>
                        <li class="list-group-item">
                            <img
                                src="icons/category_black.svg"
                                alt="category icon"
                            />
                            10 promjenjivih kategorija
                        </li>
                        <li class="list-group-item">
                            <img
                                src="icons/done_all.svg"
                                alt="checkmark icon"
                            />
                            Pristup promjenama sučelja
                        </li>
                        <li class="list-group-item">
                            <img src="icons/close_black.svg" alt="x icon" />Bez
                            filtera
                        </li>
                    </ul>
                    <div class="card-body">
                        <button class="btn btn-dark" id="premium">
                            Odaberi
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card shadow enterprise">
                    <div class="card-body">
                        <h5 class="card-title text-center">Enterprise</h5>
                        <p class="card-text text-center">
                            Najnaprednije funkcije za veliku količinu podataka
                        </p>
                        <p class="card-text text-center cijena">
                            59,99 kn / mj.
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <img
                                src="icons/backup_black.svg"
                                alt="backup icon"
                            />
                            20 GB prostora u cloud-u je dovljno za spremanje
                            <b>~64.000</b> PDF file-ova<span class="text-danger"
                                >*</span
                            >
                        </li>
                        <li class="list-group-item">
                            <img
                                src="icons/category_black.svg"
                                alt="category icon"
                            />
                            20 promjenjivih kategorija
                        </li>
                        <li class="list-group-item">
                            <img
                                src="icons/done_all.svg"
                                alt="checkmark icon"
                            />
                            Pristup promjenama sučelja
                        </li>
                        <li class="list-group-item">
                            <img
                                src="icons/done_all.svg"
                                alt="checkmark icon"
                            />
                            Pristup filterima
                        </li>
                    </ul>
                    <div class="card-body">
                        <button class="btn btn-dark" id="enterprise">
                            Odaberi
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- !StripeJS -->
<script src="https://js.stripe.com/v3/"></script>
<script src="/javascripts/checkout.js"></script>
