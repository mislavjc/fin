<% layout('layouts/boilerplateShow')%>
<div class="container vh-80 d-flex flex-column justify-content-center">
    <div class="row">
        <h1 class="display-1 text-center">Pronađi narudžbu</h1>
        <div class="col-lg-6 offset-lg-3">
            <form
                action="/filter"
                method="POST"
                novalidate
                class="validated-form"
            >
                <% Object.entries(fieldType).forEach((key, i) => {%> <% if (i %
                2 == 0) {%>
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <% if (key[1].type == "more") {%>
                            <label for="category<%= i %>" class="form-label"
                                ><%= key[1].name %></label
                            >
                            <select
                                class="form-select"
                                id="category<%= i %>"
                                name="form[category]"
                            >
                                <% for (let j = 0; j < key[1].additional.length;
                                j++) {%>
                                <option value="<%= key[1].additional[0][j] %>">
                                    <%= key[1].additional[0][j] %>
                                </option>
                                <% } %>
                            </select>
                            <% } else {%>
                            <label for="category<%= i %>" class="form-label"
                                ><%= key[1].name %></label
                            >
                            <input
                                type="<%= key[1].type %>"
                                class="form-control category-name"
                                id="category<%= i %>"
                                name="form[category]"
                            />
                            <% } %>
                        </div>
                    </div>
                    <% } else { %>
                    <div class="col">
                        <div class="mb-3">
                            <% if (key[1].type == "more") {%>
                            <label for="category<%= i %>" class="form-label"
                                ><%= key[1].name %></label
                            >
                            <select
                                class="form-select"
                                id="category<%= i %>"
                                name="form[category]"
                            >
                                <% for (let j = 0; j < key[1].additional.length;
                                j++) {%>
                                <option value="<%= key[1].additional[0][j]%>">
                                    <%= key[1].additional[0][j]%>
                                </option>
                                <% } %>
                            </select>
                            <% } else {%>
                            <label for="category<%= i %>" class="form-label"
                                ><%= key[1].name %></label
                            >
                            <input
                                type="<%= key[1].type %>"
                                class="form-control category-name"
                                id="category<%= i %>"
                                name="form[category]"
                            />
                            <% } %>
                        </div>
                    </div>
                </div>
                <% } %> <% }) %>
                <button class="btn btn-dark my-3">Spremi</button>
            </form>
        </div>
    </div>
</div>
