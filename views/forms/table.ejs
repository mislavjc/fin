<% layout('layouts/boilerplateShow')%>
<div class="container vh-80">
    <table class="table">
        <thead>
            <tr>
                <% for (let i = 0; i < currentUser.brojKategorija; i++) {%>
                <th scope="col"><%= formData[0].kategorija[i] %></th>
                <% } %>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
            <% for (let form of forms) {%>
            <tr>
                <% for (let i = 0; i < currentUser.brojKategorija; i++) {%>
                <td style="color: <%= formData[0].kategorijaBoja[i] %>">
                    <%= form.kategorija[i] %>
                </td>
                <% } %>
                <td>
                    <a href="/show/<%= form._id %>">Vi≈°e</a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
